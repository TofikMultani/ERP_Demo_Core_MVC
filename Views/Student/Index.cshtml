@model IEnumerable<ERP_Demo_Core_MVC.Models.StudentModel>
@{
    ViewData["Title"] = "Student List";
}

<div class="card p-4 shadow-sm">

    <div class="d-flex justify-content-between mb-3">
        <h4>Student List</h4>
        <a asp-action="AddStudent" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Student
        </a>
    </div>

    <table class="table table-hover align-middle">

        <thead>
            <tr>
                <th>Roll No</th>
                <th>Name</th>
                <th>DOB</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Student_Roll</td>
                    <td>@item.Student_Name</td>
                    <td>@item.Student_DOB</td>
                    <td>@item.Student_Age</td>
                    <td>@item.Student_Gender</td>
                    <td>
                        <a asp-action="EditStudent" asp-route-id="@item.Student_Roll"
                           class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a asp-action="DeleteStudent" asp-route-id="@item.Student_Roll"
                           class="btn btn-sm btn-danger ms-2">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>