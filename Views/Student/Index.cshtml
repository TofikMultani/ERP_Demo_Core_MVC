@model IEnumerable<ERP_Demo_Core_MVC.Models.StudentModel>

@{
    ViewData["Title"] = "Student List";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Student List</h3>

        <a asp-action="AddStudent" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Student
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">

            <table class="table table-bordered table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Roll No</th>
                        <th>Name</th>
                        <th>DOB</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th width="180">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Student_Roll</td>
                                <td>@item.Student_Name</td>
                                <td>@item.Student_DOB</td>
                                <td>@item.Student_Age</td>
                                <td>@item.Student_Gender</td>
                                <td>
                                    <a asp-action="EditStudent"
                                       asp-route-id="@item.Student_Roll"
                                       class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="DeleteStudent"
                                       asp-route-id="@item.Student_Roll"
                                       class="btn btn-sm btn-danger ms-2">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">
                                No Students Found
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>

</div>