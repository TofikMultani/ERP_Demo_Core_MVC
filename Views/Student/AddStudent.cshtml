@model ERP_Demo_Core_MVC.Models.StudentModel

@{
    ViewData["Title"] = "Add Student";
}

<div class="card shadow p-4">
    <h4 class="mb-4">Add New Student</h4>

    <form asp-action="AddStudent" method="post">

        <div class="mb-3">
            <label class="form-label">Student Name</label>
            <input asp-for="Student_Name" class="form-control" />
            <span asp-validation-for="Student_Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Date of Birth</label>
            <input asp-for="Student_DOB" type="date" class="form-control" />
            <span asp-validation-for="Student_DOB" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Age</label>
            <input asp-for="Student_Age" type="number" class="form-control" />
            <span asp-validation-for="Student_Age" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Gender</label>
            <select asp-for="Student_Gender" class="form-select">
                <option value="">-- Select Gender --</option>
                <option>Male</option>
                <option>Female</option>
                <option>Other</option>
            </select>
            <span asp-validation-for="Student_Gender" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Save
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}