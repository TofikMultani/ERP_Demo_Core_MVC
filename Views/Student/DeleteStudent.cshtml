@model ERP_Demo_Core_MVC.Models.StudentModel
@{
    ViewData["Title"] = "Delete Student";
}

<div class="card p-4 shadow-sm">

    <div class="alert alert-danger rounded-3">
        <strong>Warning!</strong> Are you sure you want to delete this student?
    </div>

    <p><strong>Name:</strong> @Model.Student_Name</p>
    <p><strong>DOB:</strong> @Model.Student_DOB</p>
    <p><strong>Age:</strong> @Model.Student_Age</p>
    <p><strong>Gender:</strong> @Model.Student_Gender</p>

    <form asp-action="DeleteStudent" method="post">
        <input type="hidden" asp-for="Student_Roll" />

        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            Cancel
        </a>
    </form>

</div>