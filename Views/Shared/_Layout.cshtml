<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - School ERP</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        :root {
            --primary: #6366f1;
            --primary-light: #818cf8;
            --sidebar-bg: #1e1b4b;
            --sidebar-hover: #312e81;
            --bg-light: #f4f6fb;
        }

        body {
            background: var(--bg-light);
            font-family: 'Segoe UI', sans-serif;
        }

        /* Sidebar */
        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            background: linear-gradient(180deg,#1e1b4b,#4f46e5);
            padding-top: 20px;
            box-shadow: 4px 0 20px rgba(0,0,0,0.08);
        }

            .sidebar h4 {
                color: white;
                text-align: center;
                margin-bottom: 20px;
            }

            .sidebar a {
                display: flex;
                align-items: center;
                gap: 10px;
                padding: 12px 20px;
                color: #e0e7ff;
                text-decoration: none;
                border-radius: 8px;
                margin: 6px 12px;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background: var(--sidebar-hover);
                    transform: translateX(6px);
                }

        /* Content */
        .content {
            margin-left: 250px;
            padding: 25px;
        }

        /* Topbar */
        .topbar {
            background: white;
            padding: 15px 25px;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.05);
            margin-bottom: 25px;
        }

        /* Cards */
        .card {
            border-radius: 15px !important;
            border: none !important;
            transition: 0.3s ease;
            animation: fadeIn 0.4s ease-in-out;
        }

            .card:hover {
                transform: translateY(-6px);
                box-shadow: 0 12px 30px rgba(99,102,241,0.15);
            }

        /* Buttons */
        .btn-primary {
            background: var(--primary);
            border: none;
            border-radius: 8px;
        }

            .btn-primary:hover {
                background: var(--primary-light);
                transform: scale(1.05);
            }

        .btn-warning, .btn-danger, .btn-secondary {
            border-radius: 8px;
        }

        /* Table */
        .table thead {
            background: var(--primary);
            color: white;
        }

        .table tbody tr:hover {
            background: #eef2ff;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h4>School ERP</h4>

        <a asp-controller="Home" asp-action="Index">
            <i class="bi bi-speedometer2"></i> Dashboard
        </a>

        <a asp-controller="Student" asp-action="Index">
            <i class="bi bi-people"></i> Students
        </a>

        <a asp-controller="Teacher" asp-action="Index">
            <i class="bi bi-person-badge"></i> Teachers
        </a>

        <a asp-controller="Classes" asp-action="Index">
            <i class="bi bi-journal-bookmark"></i> Classes
        </a>

        <a asp-controller="Attendance" asp-action="Index">
            <i class="bi bi-calendar-check"></i> Attendance
        </a>

        <a asp-controller="Fees" asp-action="Index">
            <i class="bi bi-cash-stack"></i> Fees
        </a>

        <a asp-controller="Exams" asp-action="Index">
            <i class="bi bi-pencil-square"></i> Exams
        </a>

        <a asp-controller="Reports" asp-action="Index">
            <i class="bi bi-bar-chart"></i> Reports
        </a>
    </div>

    <!-- Main Content -->
    <div class="content">

        <div class="topbar d-flex justify-content-between">
            <h5>@ViewData["Title"]</h5>
            <div>
                <i class="bi bi-bell me-3"></i>
                <i class="bi bi-person-circle"></i>
            </div>
        </div>

        @RenderBody()

    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>