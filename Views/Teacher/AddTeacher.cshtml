@model ERP_Demo_Core_MVC.Models.TeacherModel
@{
    ViewData["Title"] = "Add Teacher";
}

<div class="card p-4 shadow-sm">
    <h4 class="mb-4">Add New Teacher</h4>

    <form asp-action="AddTeacher" method="post">
        <div class="mb-3">
            <label asp-for="Teacher_Name" class="form-label">Name</label>
            <input asp-for="Teacher_Name" class="form-control" />
            <span asp-validation-for="Teacher_Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Teacher_Email" class="form-label">Email</label>
            <input asp-for="Teacher_Email" type="email" class="form-control" />
            <span asp-validation-for="Teacher_Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Teacher_Phone" class="form-label">Phone Number</label>
            <input asp-for="Teacher_Phone" class="form-control" />
            <span asp-validation-for="Teacher_Phone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Teacher_Gender" class="form-label">Gender</label>
            <select asp-for="Teacher_Gender" class="form-select">
                <option value="">-- Select Gender --</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Teacher_Gender" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Teacher_Address" class="form-label">Address</label>
            <textarea asp-for="Teacher_Address" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Teacher_Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Teacher_Jion_Date" class="form-label">Joining Date</label>
            <input asp-for="Teacher_Jion_Date" type="date" class="form-control" />
            <span asp-validation-for="Teacher_Jion_Date" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Save
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}