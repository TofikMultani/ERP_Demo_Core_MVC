@model IEnumerable<ERP_Demo_Core_MVC.Models.TeacherModel>
@{
    ViewData["Title"] = "Teacher List";
}

<div class="card p-4 shadow-sm">

    <div class="d-flex justify-content-between mb-3">
        <h4>Teacher List</h4>
        <a asp-action="AddTeacher" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Teacher
        </a>
    </div>

    <table class="table table-hover align-middle">

        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Gender</th>
                <th>Address</th>
                <th>Joining Date</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Teacher_Id</td>
                    <td>@item.Teacher_Name</td>
                    <td>@item.Teacher_Email</td>
                    <td>@item.Teacher_Phone</td>
                    <td>@item.Teacher_Gender</td>
                    <td>@item.Teacher_Address</td>
                    <td>@item.Teacher_Jion_Date.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="EditTeacher" asp-route-id="@item.Teacher_Id"
                           class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a asp-action="DeleteTeacher" asp-route-id="@item.Teacher_Id"
                           class="btn btn-sm btn-danger ms-2">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>