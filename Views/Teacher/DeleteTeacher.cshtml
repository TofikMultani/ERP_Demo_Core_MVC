@model ERP_Demo_Core_MVC.Models.TeacherModel
@{
    ViewData["Title"] = "Delete Teacher";
}

<div class="card p-4 shadow-sm">
    <h4 class="mb-4 text-danger">Delete Teacher</h4>

    <div class="alert alert-warning" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        Are you sure you want to delete this teacher?
    </div>

    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.Teacher_Id</dd>

        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Teacher_Name</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Teacher_Email</dd>

        <dt class="col-sm-3">Phone Number</dt>
        <dd class="col-sm-9">@Model.Teacher_Phone</dd>

        <dt class="col-sm-3">Gender</dt>
        <dd class="col-sm-9">@Model.Teacher_Gender</dd>

        <dt class="col-sm-3">Address</dt>
        <dd class="col-sm-9">@Model.Teacher_Address</dd>

        <dt class="col-sm-3">Joining Date</dt>
        <dd class="col-sm-9">@Model.Teacher_Jion_Date.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form asp-action="DeleteTeacher" method="post">
        <input type="hidden" asp-for="Teacher_Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </div>
    </form>
</div>
